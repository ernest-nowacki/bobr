{
  "name": "turbo-2",
  "private": true,
  "scripts": {
    "build": "turbo run build --output-logs=new-only",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "e2e:test": "turbo run build --output-logs=new-only && bun scripts/hash-build.ts && turbo run e2e:test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "@types/bun": "1.3.3",
    "@types/node": "24.10.1"
  },
  "engines": {
    "bun": ">=1.3.2"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
